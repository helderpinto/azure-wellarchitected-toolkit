{
    "mode": "All",
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Audit"
      },
      "allowedPrincipalTypes": {
        "type": "array",
        "metadata": {
          "displayName": "Allowed Principal Types",
          "description": "One or more of the following principal types: User, Group, ServicePrincipal, Application, MSI"
        },
        "allowedValues": [
          "User",
          "Group",
          "ServicePrincipal",
          "Application",
          "MSI"
        ],
        "defaultValue": [ "Group", "ServicePrincipal", "MSI" ]
      },
      "exemptPrincipalIDs": {
        "type": "array",
        "metadata": {
          "displayName": "Exempt Principal IDs",
          "description": "Any Principal IDs included in this list will not have this Policy applied to them."
        },
        "defaultValue": []
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Authorization/roleAssignments",
            "field": "type"
          },
          {
            "not": {
              "field": "Microsoft.Authorization/roleAssignments/principalType",
              "in": "[parameters('allowedPrincipalTypes')]"
            }
          },
          {
            "not": {
              "field": "Microsoft.Authorization/roleAssignments/principalId",
              "in": "[parameters('exemptPrincipalIDs')]"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
